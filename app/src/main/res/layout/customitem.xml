<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/pro_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:padding="0.75dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pro_image"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/pro_title"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/pro_image"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/title_label"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pro_image"
            android:layout_marginLeft="3dp"
            android:layout_below="@id/pro_title"
            android:text="Price"
            android:textColor="@color/headings"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/pro_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/pro_image"
            android:layout_below="@id/price_label"
            android:text="price"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/pro_sold"
            android:layout_width="90dp"
            android:layout_height="95dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="200dp"
            android:layout_toRightOf="@+id/pro_image"
            android:layout_centerVertical="true"
            android:rotation="45"
            android:scaleType="fitCenter"
            android:src="@drawable/sold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>